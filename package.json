{
  "devDependencies": {
    "@ebay/browserslist-config": "^1.0.0",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.3",
    "prettier": "^1.8.2"
  },
  "lint-staged": {
    "*.{json,css,md}": ["prettier --write", "git add"],
    "*.js": ["prettier --write", "eslint -f visualstudio", "git add"]
  },
  "scripts": {
    "build":
      "for pkg in ./packages/*; do (cd $pkg && rm -rf ./dist && babel ./src --out-dir ./dist); done",
    "clean": "lerna clean && rm -rf ./packages/*/dist",
    "format": "prettier \"packages/**/*.{js,css,less}\" *.js --write",
    "lint": "eslint -f visualstudio packages/",
    "postinstall": "lerna bootstrap --hoist",
    "precommit": "lint-staged",
    "test": "ava --verbose"
  }
}
