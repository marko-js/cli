{
  "scripts": {
    "test": "ava --verbose",
    "lint": "eslint -f visualstudio packages/",
    "format": "prettier packages/**/*.{js,css,less} *.js --write",
    "precommit": "lint-staged",
    "postinstall": "lerna bootstrap --hoist"
  },
  "lint-staged": {
    "*.{json,css,md}": ["prettier --write", "git add"],
    "*.js": ["prettier --write", "eslint -f visualstudio", "git add"]
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.3",
    "prettier": "^1.8.2"
  }
}
